#include <iostream>
using namespace std;

int factorial(int n) {
    if (n == 0)  // شرط پایه
        return 1;
    else  // فراخوانی بازگشتی
        return n * factorial(n - 1);
}

int main() {
    int num;
    cout << "Enter a number: ";
    cin >> num;

    cout << "Factorial of " << num << " is: " << factorial(num) << endl;
    return 0;
}
